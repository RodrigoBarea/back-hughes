{
  "kind": "collectionType",
  "collectionName": "leave_requests",
  "info": {
    "singularName": "leave-request",
    "pluralName": "leave-requests",
    "displayName": "Leave Request"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "type": {
      "type": "enumeration",
      "enum": [
        "full day",
        "partial"
      ]
    },
    "dateStart": {
      "type": "date",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "type"
            },
            "full day"
          ]
        }
      }
    },
    "dateEnd": {
      "type": "date",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "type"
            },
            "full day"
          ]
        }
      }
    },
    "datePartial": {
      "type": "date",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "type"
            },
            "partial"
          ]
        }
      }
    },
    "subjects": {
      "type": "json",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "type"
            },
            "partial"
          ]
        }
      }
    },
    "reason": {
      "type": "text"
    },
    "sectionName": {
      "type": "string"
    },
    "artGroupName": {
      "type": "string"
    },
    "parent": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::parent.parent",
      "inversedBy": "leave_requests"
    },
    "student": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::student.student",
      "inversedBy": "leave_requests"
    }
  }
}
